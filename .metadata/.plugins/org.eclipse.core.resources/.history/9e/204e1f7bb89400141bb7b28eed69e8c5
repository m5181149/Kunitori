package Game {
	
	import World.World;
	import Game.Window;
	
	/**
	 * @author yuki
	 */
	
	//Game オブジェクト
	public class Game {
		
		private var window_map:Window ;
		private var window_minimap:Window;
		private var world:World;
		
		//コンストラクタ
		public function Game()
		{
			world = new World(0);
			window_map = new Window(world);
			//
		}
		
		public function returnWindow_map():Window
		{
			return this.window_map;
		}
		
		public function returnWindow_minimap():Window
		{
			return this.window_minimap
		}

	}
}
